# Environment Configuration
PORT=3000
NODE_ENV=production

# Security - OPTIONAL: Only needed if ENABLE_AUTH=true
# Generate a secure secret with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING_MINIMUM_64_CHARACTERS
ENABLE_AUTH=false

# Refresh Token Configuration
# Separate secret for refresh tokens (recommended for extra security)
REFRESH_TOKEN_SECRET=CHANGE_THIS_TO_ANOTHER_SECURE_RANDOM_STRING
# Access token expiry (default: 15m) - supports: 15m, 1h, 7d format
ACCESS_TOKEN_EXPIRY=15m
# Refresh token expiry in days (default: 30)
REFRESH_TOKEN_EXPIRY_DAYS=30

# CORS Configuration - Origin Whitelisting
# For multiple origins, use comma-separated values (no spaces around commas)
# CORS_ALLOWED_ORIGINS takes precedence over CORS_ORIGIN if both are set
# Production example: CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000
# Single origin (legacy support)
CORS_ORIGIN=http://localhost:5173

# Paths
MUSIC_DIR=./data/MusicFiles
DB_PATH=./backend/music.db

# Optional: Enable debug logging
# DEBUG=express:*

# Frontend API URL (leave empty in production to use relative paths)
VITE_API_URL=

# Rate Limiting (requests per window)
AUTH_RATE_LIMIT_WINDOW_MS=900000
AUTH_RATE_LIMIT_MAX=5
API_RATE_LIMIT_WINDOW_MS=60000
API_RATE_LIMIT_MAX=100

# AI Models Configuration (for Lyric Studio)
# Get your API key from: https://aistudio.google.com/apikey
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL_FAST=gemini-2.5-flash
GEMINI_MODEL_QUALITY=gemini-2.5-pro

# Google OAuth 2.0 Configuration
# Get credentials from Google Cloud Console: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
VITE_GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com


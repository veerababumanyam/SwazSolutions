{
    "compilerOptions": {
        "checkJs": true,
        "allowJs": true,
        "noEmit": true,
        "target": "ES2020",
        "module": "commonjs",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "strict": false,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "typeRoots": [
            "./types",
            "./node_modules/@types"
        ]
    },
    "include": [
        "./**/*.js",
        "./types/**/*.d.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}